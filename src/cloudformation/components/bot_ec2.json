{
  "Parameters": {
    "Bucket": {
      "Type": "String"
    },
    "BotInstanceType": {
      "Type": "String"
    },
    "BotInstanceAmi": {
      "Type": "String"
    },
    "BatchJobQueueName": {
      "Type": "String"
    },
    "BatchPredictJobDefinitionName": {
      "Type": "String"
    }
  },
  "Resources": {
    "BotEC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "InstanceType": { "Ref" : "BotInstanceType" },
        "ImageId": { "Ref" : "BotInstanceAmi" },
        "IamInstanceProfile": { "Ref" : "BotInstanceProfile" },
        "UserData": {
            "Fn::Base64": {
              "Fn::Join": ["", [
                "#!/bin/bash -ex\n",
                "exec > >(tee /var/log/user-data.log|logger -t user-data -s 2>/dev/console) 2>&1\n",
                "yum update -y\n",
                "yum install -y python3\n",
                "aws s3 sync s3://",
                { "Ref" : "Bucket" },
                "/source/discord-bot ./discord-bot\n",
                "pip3 install -r discord-bot/requirements.txt\n",
                "python3 discord-bot/main.py --bucket ",
                { "Ref" : "Bucket" },
                " --batch_job_queue ",
                { "Ref" : "BatchJobQueueName" },
                " --batch_job_definition ",
                { "Ref" : "BatchPredictJobDefinitionName"}
              ]]
            }
        }
      }
    },
    "BotInstanceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "BotInstanceRole",
        "AssumeRolePolicyDocument": {
          "Version": "2008-10-17",
          "Statement": [
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Service": "ec2.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/AmazonS3FullAccess",
          "arn:aws:iam::aws:policy/SecretsManagerReadWrite",
          "arn:aws:iam::aws:policy/AWSBatchFullAccess"
        ]
      }
    },
    "BotInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Roles": [
          {
            "Ref": "BotInstanceRole"
          }
        ]
      }
    }
  }
}